@model Vietjet.com.Models.baysGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<center> <h1>Mua Vé</h1></center> 

<p>
    <a asp-action="Create">Tạo thông tin </a>
</p>
<form asp-controller="bays" asp-action="Index" method="get">
 <p>
     <select asp-for="bayGenre" asp-items="Model.Genres">
 <option value="">All</option>
 </select>
  <input type="text" name="SearchString" />
 <input type="submit" value="tìm kiếm" />
 </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bays[0].Title)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.bays[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bays[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bays[0].Price)
            </th>
            <th>@Html.DisplayNameFor(model => model.bays[0].Rating)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.bays) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Thông tin vé</a> 
            </td>
        </tr>
}
    </tbody>
</table>
